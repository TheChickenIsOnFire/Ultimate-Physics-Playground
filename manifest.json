{
  "name": "Ultimate Physics Playground",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A physics playground game using matter.js",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon128.png"
  },
  "permissions": ["storage"],
  "offline_enabled": true,
  "web_accessible_resources": [{
    "resources": ["textures/*"],
    "matches": ["<all_urls>"]
  }]
}