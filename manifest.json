{
  "name": "Ultimate Physics Playground",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A physics playground game using matter.js",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": ["storage"],
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"
}